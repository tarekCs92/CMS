@using System.Web.UI.WebControls
@using Microsoft.Ajax.Utilities
@using PagedList.Mvc
@using EF
@model PagedList.IPagedList<LayoutTB>
<table class="table table-users table-hover">
    <thead>
        <tr>
            <th>
                الكود
            </th>
            @if (HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().ToLower() != "header")
            {
                <th>
                    العنوان
                </th>
            }
            else
            {
                <th>
                    الجوال
                </th>
            }
            <th>
                الوصف
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.ArTitle
                </td>
                <td>
                    @Html.Raw(item.ArDescription)
                </td>
                <td>
                    <a href="/@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()/Edit?id=@item.Id"><i class="fa  fa-edit"></i>  تعديل</a> &nbsp;&nbsp;
                    @*<a href="#" class="Delete-Item" data-id="@item.Id"><i class="fa  fa-trash"></i> حذف </a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="" style="display:none">
    <div class="pull-right">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
    <input type="hidden" id="pageindex" value="@Request.RawUrl" />
    <input type="hidden" id="pagenum" value="" />
</div>
