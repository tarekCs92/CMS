@using EF;
@model IEnumerable<LayoutTB>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-8 text-center">
            <h2 class="text-center">
                <i class="fa fa-database"></i> <span>@ViewBag.Section</span> <span>ادارة</span> 
            </h2>
        </div>
        <div class="col-md-2">

        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <span class="pull-left">
                <a href="/@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()/Create" class="btn btn-primary"> <i class="fa fa-plus-circle"></i> اضافة </a>
            </span>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-6">
